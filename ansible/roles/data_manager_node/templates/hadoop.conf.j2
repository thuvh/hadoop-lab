[program:datanode]
command={{ hadoop_home }}/bin/hdfs start datanode
process_name=%(program_name)s
numprocs=1
directory={{ hadoop_home }}
autostart=true
autorestart=true
startsecs=10
startretries=3
user={{ hadoop_user }}
redirect_stderr=true
stdout_logfile=/var/log/hadoop/job-datanode.log

[program:nodemanager]
command={{ hadoop_home }}/bin/yarn start nodemanager
process_name=%(program_name)s
numprocs=1
directory={{ hadoop_home }}
autostart=true
autorestart=true
startsecs=10
startretries=3
user={{ hadoop_user }}
redirect_stderr=true
stdout_logfile=/var/log/hadoop/job-nodemanager.log
